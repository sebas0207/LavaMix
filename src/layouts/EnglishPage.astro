---
// Importa los componentes necesarios
import CardD from "../components/CardDark.astro";
import CardBlue from "../components/CardBlue.astro";
import "@fontsource/jetbrains-mono/600.css";
import "@fontsource/jetbrains-mono/700.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="font-mono">
    <slot />
  </body>
</html>
<main class="container mx-auto px-2 sm:px-4 max-w-md">
  <section class="flex flex-col justify-center py-4 sm:py-6">
    <di v class="p-2">
      <h1 class="text-3xl sm:text-4xl mb-4 sm:mb-6 text-center">
        Washing instructions
      </h1>
    </di>
    <div class="space-y-3 sm:space-y-4">
      <div>
        <CardD number="1">
          <h1 class="text-base sm:text-lg font-bold">
            Load the washing machine <span class="text-[#1CDAC5]"
              >And close the door.</span
            >
          </h1>
          <p class="text-xs sm:text-sm font-semibold text-start mt-2 sm:mt-2">
            Remember to close pockets and zippers.
          </p>
        </CardD>
      </div>
      <div>
        <CardD number="2">
          <h1 class="text-base sm:text-lg font-bold">
            Make <span class="text-[#1CDAC5]">payment.</span>
          </h1>
          <p class="text-xs sm:text-sm font-semibold mt-2">
            Soap, ozone and fabric softener included in price.
          </p>
        </CardD>
      </div>
      <div>
        <CardD number="3">
          <h1 class="text-base sm:text-lg font-bold">
            Select wash <span class="text-[#1CDAC5]">program.</span>
          </h1>
          <p class="text-xs sm:text-sm font-semibold mt-2">
            The display indicates the remaining process time.
          </p>
        </CardD>
      </div>
      <div>
        <CardD number="4">
          <h1 class="text-base sm:text-lg font-bold">
            Press <span class="text-[#1CDAC5]">start.</span>
          </h1>
          <p class="text-xs sm:text-sm font-semibold mt-2">
            35 minute wash cycle.
          </p>
        </CardD>
      </div>
    </div>
  </section>

  <section class="flex flex-col justify-center py-2 sm:py-6">
    <h1 class="text-3xl sm:text-4xl mb-4 sm:mb-6 text-center">
      Drying instructions
    </h1>
    <div class="space-y-3 sm:space-y-4">
      <div>
        <CardBlue number="1">
          <h1 class="text-base sm:text-lg font-bold">
            Load the washing machine <span class="text-[#1CDAC5]"
              >and close the door.</span
            >
          </h1>
          <p class="text-xs sm:text-sm font-semibold text-start mt-2 sm:mt-2">
            Remember to close pockets and zippers.
          </p>
        </CardBlue>
      </div>
      <div>
        <CardBlue number="2">
          <h1 class="text-base sm:text-lg font-bold">
            Make <span class="text-[#1CDAC5]">payment.</span>
          </h1>
        </CardBlue>
      </div>
      <div>
        <CardBlue number="3">
          <h1 class="text-base sm:text-lg font-bold">
            Select drying <span class="text-[#1CDAC5]">program.</span>
          </h1>
          <p class="text-xs sm:text-sm font-semibold mt-2">
            The display shows the remaining process time You can open the door
            at any time to check the Degree of drying of the laundry when you
            close The door press start
          </p>
        </CardBlue>
      </div>
      <div>
        <CardBlue number="4">
          <h1 class="text-base sm:text-lg font-bold">
            Press <span class="text-[#1CDAC5]">start.</span>
          </h1>
        </CardBlue>
      </div>
    </div>
  </section>
</main>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
