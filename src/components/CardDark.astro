---
// Define las props para el componente
interface Props {
  number: string | number; // Número dinámico
}

const { number } = Astro.props; // Extrae la prop 'number'
---

<div class="flex justify-center">
  <div class="bg-[#57585A] rounded-lg shadow-lg p-4 w-96 text-gray-700">
    <div class="bg-white rounded-md p-6">
      <div class="flex items-center justify-between gap-8">
        <div class="p-2">
          <slot />
          <!-- Contenido dinámico pasado desde fuera -->
        </div>
        <!-- Número dinámico -->
        <div class="text-5xl font-bold" style="color: #1CDAC5;">{number}.</div>
      </div>
    </div>
  </div>
</div>
